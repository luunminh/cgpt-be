{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": false,
    "paths": {
      "@core": ["src/core"],
      "@core/*": ["src/core/*"],

      "@types": ["./src/core/generated"],
      "@types/*": ["./src/core/generated/*"],

      "@system": ["src/modules/system"],
      "@system/*": ["src/modules/system/*"],

      "@config": ["src/modules/system/config"],
      "@config/*": ["src/modules/system/config/*"],

      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],

      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
